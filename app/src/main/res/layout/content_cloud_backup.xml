<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="?actionBarSize"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    tools:context=".CloudBackupActivity"
    android:gravity="top">

    <TextView
        android:id="@+id/lblCloud1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_color"
        android:textColor="?textColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblCloud2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cloud_backup_activity_text2"
        android:textColor="?textColor"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/lblLastBackup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:background="@drawable/bottom_border"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:background="@drawable/bottom_border"
        android:gravity="start|center_vertical"
        android:id="@+id/layout_auto_backup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?textColor"
            android:textSize="19sp"
            android:layout_marginBottom="5dp"
            android:text="@string/auto_backup" />

        <TextView
            android:id="@+id/lblAutoBackupState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:background="@drawable/bottom_border"
        android:gravity="start|center_vertical"
        android:onClick="createCloudBackup"
        android:id="@+id/layout_create_backup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?textColor"
            android:text="@string/create_backup"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:background="@drawable/bottom_border"
        android:gravity="start|center_vertical"
        android:onClick="restoreFromCloudBackup"
        android:id="@+id/layout_restore_from">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?textColor"
            android:text="@string/restore"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>