<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- from my attrs.xml -->
        <item name="textColor">@color/black</item>
        <item name="fabButtonColor">@color/floatingButtonDefaultColor</item>
        <item name="bottom_sheet_style">@drawable/top_borders</item>
        <item name="bold_button_src">@drawable/ic_bold_black</item>
        <item name="italic_button_src">@drawable/ic_italic_black</item>
        <item name="underline_button_src">@drawable/ic_underline_black</item>
        <item name="strike_button_src">@drawable/ic_strikethrough_black</item>
        <item name="colored_buttons_text_color">@color/green</item>

        <item name="app_icon">@mipmap/ic_documenter_icon_white</item>
        <item name="app_icon_round">@mipmap/ic_documenter_icon_white_round</item>

        <item name="spinner_background">@color/white</item>

        <item name="toolbarBackgroundColor">@color/colorPrimary</item>

        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogDark</item>
        <!-- from my attrs.xml -->
        <item name="textColor">@color/white</item>
        <item name="fabButtonColor">@color/gray</item>
        <item name="bottom_sheet_style">@drawable/top_borders_dark</item>
        <item name="bold_button_src">@drawable/ic_bold_white</item>
        <item name="italic_button_src">@drawable/ic_italic_white</item>
        <item name="underline_button_src">@drawable/ic_underline_white</item>
        <item name="strike_button_src">@drawable/ic_strikethrough_white</item>

        <item name="app_icon">@mipmap/ic_documenter_icon_black</item>
        <item name="app_icon_round">@mipmap/ic_documenter_icon_black_round</item>
        <item name="spinner_background">@color/gray</item>

        <item name="toolbarBackgroundColor">@color/black</item>
    </style>

    <style name="AlertDialogDark" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#494949</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">?toolbarBackgroundColor</item>
        <item name="android:popupBackground">@color/white</item>

        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
