<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="fabButtonColor">@color/floatingButtonDefaultColor</item>
        <item name="bottom_sheet_style">@drawable/top_borders</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="textColor">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="alertDialogTheme">@style/AlertDialogDark</item>
        <item name="fabButtonColor">@color/gray</item>
        <item name="bottom_sheet_style">@drawable/top_borders_dark</item>
    </style>

    <style name="AlertDialogDark" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#494949</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
