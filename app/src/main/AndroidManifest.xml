<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxsavitsky.documenter">

    <application
        android:icon="@drawable/documenter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:allowBackup="false">
        <activity
            android:name=".CreateEntry"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_create_entry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ViewEntry" />
        <activity
            android:name=".EntriesList"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_entries_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DocumentList"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_document_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateDocument"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_create_documents"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategoryList"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_category_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateCategory"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_create_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>